<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.4" method="upgrade">
	<name>Calculator</name>
	<creationDate>2011-10-13</creationDate>
	<author>Qawelesizwe Mlilo</author>
	<authorEmail>qawemlilo@gmail.com</authorEmail>
	<authorUrl>http://blog.ragingflame.co.za</authorUrl>
	<copyright>(C)2013 - Raging Flame</copyright>
	<license>(C)2013 - Raging Flame</license>
	<!--  The version string is recorded in the components table -->
	<version>0.0.1</version>
	<!-- The description is optional and defaults to the name -->
	<description>Conveyancing Calculator</description>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
      to copy FROM in the package to install therefore files copied
      in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>controller.php</filename>
		<filename>calculator.php</filename>
		<filename>index.html</filename>
		<folder>views</folder>
		<folder>js</folder>
        <folder>assets</folder>
	</files>

	<administration>
		<!-- Administration Menu Section -->
		<menu>Conveyancing Calculator</menu>

		<!-- Administration Main File Copy Section -->
		<files folder="admin">
			<filename>calculator.php</filename>
			<filename>index.html</filename>
		</files>  
	</administration>
</extension>